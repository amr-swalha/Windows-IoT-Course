<Page
    x:Class="FrontRP.Examples.ExCalendar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FrontRP.Examples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <CalendarView x:Name="CA1" FirstDayOfWeek="Monday" DisplayMode="Decade"
                      HoverBorderBrush="Red" IsTodayHighlighted="True"
                      SelectionMode="Single" NumberOfWeeksInView="3"
                      
                      HorizontalAlignment="Left" VerticalAlignment="Top" Height="295" Width="361" Margin="0,53,0,0"/>
        
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Calendar View" VerticalAlignment="Top" Margin="0,28,0,0"/>
        <Button x:Name="BntGet" Content="Button" HorizontalAlignment="Left" Margin="33,383,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <TextBlock x:Name="TxtResult" HorizontalAlignment="Left" Margin="33,353,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Page>
